{
  "name": "nodejs-boiler-plate",
  "version": "1.0.0",
  "description": "This is a node js with es6 and pug configured.",
  "main": "app.js",
  "repository": "https://github.com/yashgo0018/express-boiler-plate",
  "author": "Yash Goyal",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "cd dist && node index.js",
    "dev": "cd src && nodemon --exec babel-node index.js",
    "build": "babel src -d dist --copy-files --source-maps inline"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "pug": "^2.0.4",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0"
  },
  "devDependencies": {
    "nodemon": "^1.19.2"
  }
}